{
  "name": "@aligent/bigcommerce-api",
  "version": "0.0.1",
  "description": "Fully typed BigCommerce API client generated from documentation schemas",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "build-file-list": "node src/internal/reference/list-files",
    "build-reference-types": "node src/internal/reference/generate",
    "test-types": "tsd",
    "lint": "eslint .",
    "clean": "rimraf lib",
    "prepare": "npm run clean && npm run build-file-list && npm run build-reference-types && npm run build -- --build tsconfig.publish.json"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aligent/bigcommerce-api.git"
  },
  "author": "Aligent",
  "license": "MIT",
  "devDependencies": {
    "@aligent/ts-code-standards": "^4.0.0",
    "@types/node": "^22.13.14",
    "openapi-typescript": "^7.6.1",
    "rimraf": "^6.0.1",
    "temp-dir": "^3.0.0",
    "ts-morph": "^25.0.1",
    "tsd": "^0.32.0",
    "type-fest": "^4.38.0",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0"
  },
  "dependencies": {
    "form-data": "^4.0.2",
    "node-fetch": "^3.3.2",
    "query-string": "^9.1.1"
  }
}
